<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#dadada"
    android:padding="3dp"
    tools:context=".Forum">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/reply_post_image"
        android:layout_marginBottom="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/reply_forum_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/reply_cardview"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="7dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/reply_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/reply_user_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:civ_border_color="#123456"
                        app:civ_border_width="0.2dp" />

                    <TextView
                        android:id="@+id/reply_post_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/reply_user_image"
                        android:text="User name"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#000099"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="2dp"
                        android:textColor="#000099"
                        android:id="@+id/varified"
                        android:layout_toRightOf="@+id/reply_post_name"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/varified"
                        android:layout_marginTop="7dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/delete_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:text="âŒ" />

                    <TextView
                        android:id="@+id/reply_post_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reply_user_image"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:autoLink="all"
                        android:text="User text"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reply_post_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/reply_user_image"
                        android:autoLink="all"
                        android:text="time"
                        android:textColor="#916E00"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/reply_post_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="5dp"
        app:civ_border_color="#123456"
        app:civ_border_width="0.2dp" />

    <EditText
        android:id="@+id/edit_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gap"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/reply_post"
        android:layout_toRightOf="@+id/reply_post_image"
        android:background="@drawable/forum_post"
        android:hint="Post your reply"
        android:padding="5dp"
        android:textColor="#000000"
        android:textColorHint="#B4B4B4"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/reply_post"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/forum_button"
        android:padding="8dp"
        android:src="@drawable/sendwhite" />

    <io.github.yavski.fabspeeddial.FabSpeedDial
        android:id="@+id/reply_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reply_post"
        android:layout_alignParentRight="true"
        android:alpha=".95"
        android:padding="5dp"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        ads:fabBackgroundTint="#123456"
        app:fabGravity="bottom_end"
        ads:miniFabBackgroundTint="#000000"
        ads:miniFabBackgroundTintList="@array/menu_background_color"
        ads:miniFabDrawableTint="#FFFFFF"
        ads:miniFabTitleBackgroundTint="#000000"
        ads:miniFabTitleTextColor="#FFFFFF"
        ads:miniFabTitlesEnabled="true"
        ads:touchGuard="true"
        ads:touchGuardDrawable="@color/cardview_shadow_start_color"
        app:fabMenu="@menu/reply_subscription_menu" />
</RelativeLayout>