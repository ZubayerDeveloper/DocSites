<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#dadada"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/lollipopcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                app:civ_border_color="#123456"
                app:civ_border_width="0.2dp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/user_image"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="#000099"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="User name" />

            <TextView
                android:id="@+id/lollipopvarified"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/user_name"
                android:background="@mipmap/varified"
                android:padding="2dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="#000099"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delete_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/user_text"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="❌" />

            <TextView
                android:id="@+id/user_text"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:autoLink="all"
                android:text="User text"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/lollipop_layout_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_text"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_text"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:id="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postImage"
                android:background="#DFDFDF"
                android:orientation="vertical"
                android:padding=".2dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/user_image"
                android:textColor="#916E00"
                tools:text="time" />

            <TextView
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seperator"
                android:layout_marginTop="4dp"
                android:padding="10dp"
                android:text="Report"
                android:textColor="#FC0E00" />

            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seperator"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Reply"
                android:textColor="#990000" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:padding="1.5dp" />
</RelativeLayout>